{
    "cSpell.words": [
        "conventionalcommits",
        "halospv3"
    ],
    "files.readonlyInclude": {
        "node_modules/**": true
    },
    "typescript.implementationsCodeLens.enabled": true,
    "nodejs-testing.extensions": [
        {
            "extensions": [
                "mjs",
                "cjs",
                "js"
            ],
            "parameters": []
        },
        {
            "extensions": [
                "mts",
                "cts",
                "ts"
            ],
            "parameters": [
                "--import",
                "tsx"
            ]
        }
    ],
    "yaml.schemas": {
        "https://json.schemastore.org/semantic-release.json": "**/.releaserc.yml"
    },
    "conventionalCommits.scopes": [
        "dotnet",
        "node",
        "vscode"
    ],
    "nodeTdd.glob": "{src,test}/**/*.{js,ts,jsx,tsx,mts}",
    "nodeTdd.reporter": "tap",
    "nodeTdd.showCoverage": true
}