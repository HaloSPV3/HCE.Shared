{
    "extends": "tsconfig-moon/tsconfig.json",
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dts",
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "outDir": "lib",
        "resolveJsonModule": false,
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ]
}