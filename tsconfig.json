{
    "extends": "./baseTsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "outDir": "_tsout"
    },
    "include": [
        "./*.cjs",
        "./*.js",
        "./*.mjs",
        "./*.cts",
        "./*.mts",
        "./*.ts",
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "references": [
        {
            "path": "./tests/tsconfig.json"
        },
        {
            "path": "./src/tsconfig.json"
        }
    ]
}
