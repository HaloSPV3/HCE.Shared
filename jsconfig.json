{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedDeclarations": false,
    "skipLibCheck": true
  },
  "include": [
    "./*.cjs",
    "./*.js",
    "./*.mjs"
  ],
  "references": [
    {
      "path": "./tests/tsconfig.json"
    },
    {
      "path": "./src/tsconfig.json"
    }
  ],
  "exclude": [
    "**/node_modules",
    "**/node_modules/**",
    "**/tsconfig.json",
    "**/tsconfig.*.json"
  ]
}
